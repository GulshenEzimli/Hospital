<Application x:Class="HospitalManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HospitalManagement">
    <Application.Resources>
        <Style x:Key="EmployeesStack" TargetType="{x:Type StackPanel}">
            <Setter Property="Height" Value="0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EmployeeSituation}" Value="true">
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding EmployeeSituation}" Value="false">
                    <Setter Property="Height" Value="0"/>
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
