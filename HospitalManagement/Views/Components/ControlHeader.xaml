<UserControl x:Class="HospitalManagement.Views.Components.ControlHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagement.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border BorderBrush="White" BorderThickness="0 0 0 3">
        <TextBlock Height="25" FontSize="15" Background="#4EA8DE" Foreground="Black" TextAlignment="Center" FontWeight="DemiBold" Text="{Binding Header}"/>
    </Border>
</UserControl>
