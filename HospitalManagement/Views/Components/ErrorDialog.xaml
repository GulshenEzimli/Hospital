<UserControl x:Class="HospitalManagement.Views.Components.ErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagement.Views.Components"
             mc:Ignorable="d" 
             Height="0" DataContext="{Binding Message}">
    <Border Background="AntiqueWhite" BorderThickness="3">
        <TextBlock  Height="25" Foreground="{Binding Path=TextColor}" FontSize="22" TextAlignment="Center" FontWeight="Bold" Text="{Binding Message}"/>
    </Border>
</UserControl>
