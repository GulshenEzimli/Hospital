<UserControl x:Class="HospitalManagement.Views.UserControls.PatientProcedureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagement.Views.UserControls"
             xmlns:components="clr-namespace:HospitalManagement.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <components:ControlHeader/>
                <components:ErrorDialog x:Name="ErrorDialog"/>

                <Grid x:Name="grdPatientProcedureAdded" Margin="0 0 0 0">
                    <Grid Background="WhiteSmoke">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            BorderThickness="3" BorderBrush="BlueViolet">
                            <TextBlock Text="Add Patient values" FontSize="25"/>
                        </Border>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 10 0 10">
                            <TextBlock Text="Patient Name" FontSize="15" HorizontalAlignment="Right" Margin="0 0 10 10"/>
                            <TextBlock Text="Patient Surname" FontSize="15" HorizontalAlignment="Right" Margin="0 0 10 10"/>
                            <TextBlock Text="Patient PIN" FontSize="15" HorizontalAlignment="Right" Margin="0 0 10 0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0 10 0 10">
                            <TextBox Width="120" Height="auto" Margin="10 3 0 5" HorizontalAlignment="Left" Text="{Binding Path=CurrentPatientProcedure.Patient.Name}"/>
                            <TextBox Width="120" Height="auto" Margin="10 8 0 5" HorizontalAlignment="Left" Text="{Binding Path=CurrentPatientProcedure.Patient.Surname}"/>
                            <TextBox Width="120" Height="auto" Margin="10 10 0 3" HorizontalAlignment="Left" Text="{Binding Path=CurrentPatientProcedure.Patient.PIN}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0 10 0 10">
                            <TextBlock Text="PhoneNumber" FontSize="15" HorizontalAlignment="Right" Margin="0 0 10 10"/>
                            <TextBlock Text="BirthDate" FontSize="15" HorizontalAlignment="Right" Margin="0 0 10 10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="3" Margin="0 10 0 10">
                            <TextBox Width="120" Height="auto" Margin="10 3 0 5" HorizontalAlignment="Left" 
                                     Text="{Binding Path=CurrentPatientProcedure.Patient.PhoneNumber}"/>
                            <components:CustomDatePicker Width="120" Height="auto" Margin="10 8 0 5" 
                                     DataContext="{Binding Path=CurrentPatientProcedure.Patient.BirthDate}" HorizontalAlignment="Left"/>
                            
                        </StackPanel>

                        <Border Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            BorderThickness="1.5" BorderBrush="BlueViolet" Margin="0 5 50 5">
                            <Button Content="Cancel" Padding="15 0 15 0"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            BorderThickness="1.5" BorderBrush="BlueViolet" Margin="0 5 50 5">
                            <Button Content="Next" Padding="15 0 15 0" Command="{Binding AddDoctor}"/>
                        </Border>
                    </Grid>
                </Grid>
            </StackPanel>

            <ListView x:Name="MainList" Grid.Row="1" SelectionChanged="MainList_SelectionChanged" 
                      ItemsSource="{Binding Path=PatientProcedureValues}" Style="{DynamicResource listViewCustom}">
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header="No" Width="30" DisplayMemberBinding="{Binding No}"/>
                        <GridViewColumn Header="Patient Values" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DisplayPatient}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Doctor Values" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DisplayDoctor}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Nurse Values" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DisplayNurse}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Procedure" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=ProcedureName}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Cost" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Path=Cost}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Use Date">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Path=UseDate}" Style="{DynamicResource gridViewTextColumn}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </Border>
</UserControl>
